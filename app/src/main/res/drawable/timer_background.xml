<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Drawable outline -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/timer_stroke"
                android:color="?attr/timerOnBackground" />

            <corners android:radius="@dimen/timer_corner_radius" />

        </shape>
    </item>



    <!--shadow top left -->
    <item android:top="@dimen/timer_stroke"
        android:left="@dimen/timer_stroke"
        android:bottom="@dimen/timer_stroke"
        android:right="@dimen/timer_stroke"
        >
        <shape android:shape="rectangle">
            <solid
                android:color="?attr/grid_background" />
            <corners  android:radius="@dimen/timer_corner_radius"
                 />

        </shape>
    </item>
</layer-list>