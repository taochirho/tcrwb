<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Drawable outline -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/starter_stroke"
                android:color="?attr/colorPrimary" />
            <corners android:radius="@dimen/starter_corner_radius" />

        </shape>
    </item>
    <!--shadow top left -->
    <item android:top="@dimen/timer_stroke"
        android:left="@dimen/timer_stroke"
        android:bottom="@dimen/timer_stroke"
        android:right="@dimen/timer_stroke"
        >
        <shape android:shape="rectangle">
            <solid
                android:color="?attr/colorOnPrimary" />
            <corners  android:radius="@dimen/starter_corner_radius"
                />

        </shape>
    </item>
</layer-list>