<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="@dimen/tile_depth"
        android:left="@dimen/tile_depth"
        android:right="@dimen/tile_depth"
        android:top="@dimen/tile_depth">

        <shape android:shape="rectangle">

            <solid android:color="?attr/colorSurface" />
            <stroke
                android:width="1dp"
                android:color="?attr/colorOnSurface" />
            <corners android:radius="@dimen/tile_inner_corner_radius" />

        </shape>
    </item>

    <item
        android:width="32dp"
        android:height="32dp"
        android:drawable="@drawable/ic_baseline_autorenew_24"
        android:gravity="top|left"
        android:left="4dp"
        android:top="4dp" />
</layer-list>