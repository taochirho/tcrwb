<resources >
    <!-- Base application theme. -->
    <style name="Theme.Testvm" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="grid_background">@color/grid_background_night</item>
        <item name="tray_background">@color/tray_background_night</item>
        <item name="tray_divider">@color/tray_divider_night</item>
        <item name="tray_divider_highlight">@color/tray_divider_highlight_night</item>
        <item name="list_background">@color/list_background_night</item>
        <item name="list_game_background">@color/list_game_background_night</item>
        <item name="list_tray_background">@color/list_tray_background_night</item>
        <item name="toolbar_background">@color/toolbar_background_night</item>

        <item name="restore_tint">@color/restore_tint_night</item>
        <item name="android:textColor"> @color/textColor_night</item>
        <item name="android:textColorPrimary"> @color/textColorPrimary_night </item>
        <item name="android:textColorSecondary"> @color/textColorSecondary_night </item>

        <item name="titleTextColor"> @color/textColorPrimary_night </item>
        <item name="subtitleTextColor"> @color/textColorSecondary_night </item>

        <item name="tile_empty">@color/tile_empty</item>
        <item name="tile_entered">@color/tile_entered_night</item>

        <item name="tile_swap_border">@color/tile_swap_border_night</item>
        <item name="tile_swap_background">@color/tile_swap_background_night</item>

        <item name="tile_swap_background_entered">@color/tile_swap_background_entered_night</item>

        <item name="tile_start_border">@color/tile_start_border_night</item>
        <item name="tile_start_background">@color/tile_start_background_night</item>

        <item name="tile_border">@color/tile_border_night</item>
        <item name="tile_right">@color/tile_right_night</item>
        <item name="tile_nearly_right">@color/tile_nearly_right_night</item>
        <item name="tile_wrong">@color/tile_wrong_night</item>
        <item name="tile_tray">@color/tile_tray_night</item>


        <item name="menu_background">@color/menu_background_night</item>
    </style>

    <style name="TCRToolBarTheme">
        <item name="actionOverflowMenuStyle">@style/TCRPopupMenu</item>
        <item name="android:textColorPrimary">@color/menu_text_night</item>
        <item name="android:textColorSecondary">@color/menu_textSecondary_night</item>
    </style>

    <style name="TCRPopupMenu"  parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>

</resources>
