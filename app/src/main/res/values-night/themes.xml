<resources >
    <!-- Base application theme. -->
    <style name="Theme.TCRWordbox" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary"> @color/LightGreen700 </item>
        <item name="colorPrimaryDark"> @color/LightGreen1100 </item>
        <item name="colorSecondary"> @color/Amber600</item>
        <item name="colorSurface"> @color/LightGreen1000</item>
        <item name="colorError"> @color/RedA200</item>
        <item name="backgroundColor"> @color/BlueGray900</item>


        <item name="colorOnPrimary"> @color/LightGreen50</item>
        <item name="colorOnSecondary"> @color/LightGreenA400</item>
        <item name="colorOnBackground">@color/BlueGray100</item>
        <item name="colorOnSurface"> @color/BlueGray50</item>
        <item name="colorOnError">@color/RedA200</item>

        <item name="tile_empty">@color/BlueGray200</item>
        <item name="tile_entered">@color/BlueGray400</item>

        <item name="tile_right">@color/LightGreen600</item>
        <item name="tile_nearly_right">@color/Amber600</item>
        <item name="tile_wrong">@color/Red600</item>
        <item name="tile_tray">@color/BlueGray300</item>



    </style>

    <style name="TCRToolBarTheme">
        <item name="actionOverflowMenuStyle">@style/TCRPopupMenu</item>
        <item name="android:textColorPrimary">@color/LightGreenA400</item>
        <item name="android:textColorSecondary">@color/LightGreenA200</item>
    </style>

    <style name="TCRPopupMenu"  parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>


</resources>
