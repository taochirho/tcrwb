<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TCRTile">
        <attr name="in_tray" format="boolean" value="false" />
        <attr name="empty" format="boolean" value="false" />
        <attr name="entered" format="boolean" value="false" />
        <attr name="wrong" format="boolean" value="false" />
        <attr name="nearly_right" format="boolean" value="false" />
        <attr name="right" format="boolean" value="false" />
        <attr name="letter_entered" format="boolean" value="false" />
    </declare-styleable>

    <declare-styleable name="TCRStartTile">
        <attr name="timer" format="boolean" value="false" />
        <attr name="pause" format="boolean" value="false" />
        <attr name="play" format="boolean" value="false" />
    </declare-styleable>

    <declare-styleable name="GameGridView">
        <attr name="top_border" format="dimension" />
        <attr name="left_border" format="dimension" />
        <attr name="bottom_border" format="dimension" />
        <attr name="right_border" format="dimension" />
        <attr name="vertical_inside" format="dimension" />
        <attr name="horizontal_inside" format="dimension" />
        <attr name="grid_tile_border" format="dimension" />
        <attr name="grid_tile_corner_radius" format="dimension" />

    </declare-styleable>

    <declare-styleable name="GameTrayView">
        <attr name="tray_tile_border" format="dimension" />
        <attr name="tray_tile_spacing" format="dimension" />
        <attr name="tray_tile_corner_radius" format="dimension" />
    </declare-styleable>

    <attr name="tile_right" format="color" />
    <attr name="tile_nearly_right" format="color" />
    <attr name="tile_wrong" format="color" />
    <attr name="tile_tray" format="color" />
    <attr name="tile_empty" format="color" />
    <attr name="tile_entered" format="color" />

    <attr name="redColor" format="color" />


</resources>