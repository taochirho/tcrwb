<resources >
    <!-- Base application theme. -->
    <style name="Theme.TCRWordbox" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary"> @color/Green200</item>
        <item name="colorPrimaryDark"> @color/LightGreen50</item>
        <item name="colorSecondary"> @color/Amber300</item>
        <item name="colorSurface"> @color/LightGreen100</item>
        <item name="colorError"> @color/Red600</item>
        <item name="backgroundColor"> @color/OffWhite</item>

        <item name="colorOnPrimary"> @color/LightGreen1000</item>
        <item name="colorOnSecondary"> @color/LightGreen700</item>
        <item name="colorOnBackground">@color/BlueGray800</item>
        <item name="colorOnSurface"> @color/LightGreen1000</item>
        <item name="colorOnError"> @color/Red600</item>

        <item name="tile_empty">@color/BlueGray700</item>
        <item name="tile_entered">@color/BlueGray500</item>

        <item name="tile_right">@color/LightGreenA200</item>
        <item name="tile_nearly_right">@color/AmberA200</item>
        <item name="tile_wrong">@color/RedA200</item>
        <item name="tile_tray">@color/BlueGray200</item>
    </style>

    <style name="TCRToolBarTheme">
        <item name="actionOverflowMenuStyle">@style/TCRPopupMenu</item>
        <item name="android:textColorPrimary">@color/LightGreenA700</item>
        <item name="android:textColorSecondary">@color/LightGreenA400</item>
    </style>

    <style name="TCRPopupMenu"  parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>


</resources>

