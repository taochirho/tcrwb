        <item name="tile_border">@color/tile_border_day</item>
        <item name="tile_right">@color/tile_right_day</item>
        <item name="tile_nearly_right">@color/tile_nearly_right_day</item>
        <item name="tile_wrong">@color/tile_wrong_day</item>
        <item name="tile_tray">@color/tile_tray_day</item>

        <item name="menu_background">@color/menu_background_day</item>
    </style>

    <style name="TCRToolBarTheme">
        <item name="actionOverflowMenuStyle">@style/TCRPopupMenu</item>
        <item name="android:textColorPrimary">@color/menu_text_day</item>
        <item name="android:textColorSecondary">@color/menu_textSecondary_day</item>

    </style>

    <style name="TCRPopupMenu"  parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@drawable/custom_popup_background</item>
    </style>




